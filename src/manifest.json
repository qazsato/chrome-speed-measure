{
  "name": "速度はかるくん",
  "version": "1.2.2",
  "manifest_version": 2,
  "description": "Webパフォーマンス計測ツール",
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*", "file://*/*"],
    "js": ["scripts/content_script.js"]
  }],
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": ["scripts/background.js"]
  },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "速度はかるくん",
    "default_popup": "index.html"
  },
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  }
}
